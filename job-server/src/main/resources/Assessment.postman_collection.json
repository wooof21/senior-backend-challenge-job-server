				{
					"name": "Step 2: Submit a job repeatedly",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"let count = pm.environment.get(\"count\");\r",
									"if (!count) {\r",
									"  count = 0;\r",
									"}\r",
									"count = parseInt(count) + 1;\r",
									"\r",
									"// stop after 5\r",
									"if (count > 5) {\r",
									"  pm.environment.unset(\"count\");\r",
									"  postman.setNextRequest(null);\r",
									"  console.log(\"Finished sending 5 requests\");\r",
									"  return;\r",
									"}\r",
									"\r",
									"// generate unique jobId\r",
									"const jobId = `job-${count}-${Date.now()}`;\r",
									"pm.environment.set(\"jobId\", jobId);\r",
									"pm.environment.set(\"count\", count);\r",
									"\r",
									"console.log(`Sending request ${count} with jobId ${jobId}`);"
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
